{
  "id": "nodebb-plugin-slugify",
  "name": "NodeBB Slugify",
  "description": "Auto transliteration of slugs.",
  "url": "https://github.com/mysteren/nodebb-plugin-slugify",
  "hooks": [
    {
      "hook": "filter:category.create",
      "method": "categoryCreate"
    },
    {
      "hook": "filter:category.update",
      "method": "categoryUpdate"
    },
    {
      "hook": "filter:topic.create",
      "method": "topicCreate"
    },
    {
      "hook": "filter:topic.edit",
      "method": "topicEdit"
    },
    {
      "hook": "filter:user.create",
      "method": "userCreate"
    }
  ]
}